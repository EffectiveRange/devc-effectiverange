    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "--targetdir=${workspaceFolder}/TARGET/AMD64-BOOKWORM"
            ],
            "envFile": "${workspaceFolder}/TARGET/AMD64-BOOKWORM/target"
        },
        {
            "name": "Python: Test Current File",
            "type": "debugpy",
            "request": "launch",
            "module": "unittest",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "${file}"
            ]
        }
    ]
}